<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="simple-form">
    <%= f.input :ingredient_id, as: :select, collection: Ingredient.all, input_html: { class: "form-control" } %>
  </div>
  <div class="simple-form">
    <%= f.input :description, inline_label: 'Yes, remember me', input_html: { class: "form-control" } %>
  </div>
  <div class="simple-form" >
    <%= f.submit "Add dose", { class: "btn-medium-form" } %>
  </div>
<% end %>
