<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">

          <div class="card" style="background-image:  url('<%= cocktail.photo? ? cl_image_path(cocktail.photo, height: 300) : "http://via.placeholder.com/300x400" %>');">
            <div class="card-description">
              <h2>
                <%= cocktail.name %>
              </h2>
            </div>
            <%= link_to "", cocktail_path(cocktail.id), class: "card-link" %>
          </div>
      </div>
    <% end %>

  </div>
</div>
