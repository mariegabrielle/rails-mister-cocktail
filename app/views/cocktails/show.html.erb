<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1><%= @cocktail.name.upcase %></h1>
        <h3>Ingredients</h3>
        <% @cocktail.doses.each do |dose| %>
          <p><%= dose.ingredient.name %> - <%= dose.description %>
            <small>
              <%= link_to dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </small>
          </p>

        <% end %>
        <h3>Add a dose</h3>
        <%= render 'doses/form' %>
    </div>

    <div class="col-xs-12 col-sm-6">
      <div class="photo">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400 %>
      </div>
    </div>
  </div>
</div>
